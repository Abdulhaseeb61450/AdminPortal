<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reports.Summary"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/simpleImageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_table_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/outbox"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outbox"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/summary"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"></TextView>

            <TextView
                android:id="@+id/logs"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logs"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_table_corners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_marginTop="@dimen/text_size10dp"
                android:id="@+id/inputSearch"
                android:layout_marginRight="5dp"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:textColor="@color/white"
                android:inputType="textVisiblePassword"/>

            <Spinner
                android:padding="0dp"
                android:id="@+id/Mobilink"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                style="@android:style/Widget.Spinner"/>

            <Button
                android:onClick="OPENEXPORTDIALOG"
                android:id="@+id/Export"
                android:layout_width="@dimen/_50sdp"
                android:layout_margin="10dp"
                android:textColor="#FFA500"
                android:layout_height="wrap_content"
                android:text="Export"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_rounded" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layout_upward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>