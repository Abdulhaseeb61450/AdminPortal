<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:id="@+id/main"
        android:layout_below="@+id/simpleImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/text_size15dp"
        android:layout_marginRight="@dimen/text_size15dp"
        android:padding="20dp"
        android:background="@drawable/layout_corners">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="123dp"
            android:src="@drawable/logo1"></ImageView>

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/orange"
        android:text="Log In"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size15dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="36dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-@."
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/white"
            >

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size15dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="36dp"
                android:textColor="@color/white"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-@_"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/Login"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:paddingLeft="@dimen/text_size15dp"
            android:paddingRight="@dimen/text_size15dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:onClick="Login"
            android:background="@drawable/button_rounded">
        </Button>

        <TextView
            android:id="@+id/signup"
            android:layout_marginTop="@dimen/text_size10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size15dp"
            android:textColor="@color/white"
            android:text="Didn't have an account? SIGN UP "/>


    </LinearLayout>
    </LinearLayout>

</ScrollView>