<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/api_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Api Name" />

    <EditText
        android:id="@+id/api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/api_name"
        android:layout_alignParentStart="true"
        android:hint="Api Key" />

    <EditText
        android:id="@+id/api_ips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/api_key"
        android:layout_alignParentStart="true"
        android:hint="Api IP's" />

    <EditText
        android:id="@+id/api_createdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/api_ips"
        android:layout_alignParentStart="true"
        android:hint="Api Created Date" />

    <EditText
        android:id="@+id/api_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/api_createdate"
        android:layout_alignParentStart="true"
        android:hint="Api Status" />

    <EditText
        android:id="@+id/api_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/api_status"
        android:layout_alignParentStart="true"
        android:hint="Api Action" />

</RelativeLayout>